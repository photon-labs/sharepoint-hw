<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>Photon</groupId>
  <artifactId>Phresco</artifactId>
  <version>2.0.0-SNAPSHOT</version>
    <pluginRepositories>
		<pluginRepository>
			<id>sharepoint-maven-plugin</id>
			<name>Phresco Repository</name>
			<url>http://dev-repo.photoninfotech.com:8080/nexus/content/groups/testing/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
		</pluginRepository>
	</pluginRepositories>
	<repositories>
		<repository>
			<id>nunit binaries</id>
			<name>Phresco Repository</name>
			<url>http://dev-repo.photoninfotech.com:8080/nexus/content/groups/testing/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
	</repositories>
	<build>
		<plugins>
			<plugin>
				<groupId>com.photon.phresco.plugins</groupId>
				<artifactId>sharepoint-maven-plugin</artifactId>
				<version>2.0.0-SNAPSHOT</version>
				<extensions>true</extensions>
				<executions>
					<execution>
						<id>functional-test</id>
						<phase>test</phase>
						<goals>
							<goal>test</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.3</version>
				<executions>
					<execution>
						<id>unpack</id>
						<phase>validate</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<markersDirectory>binaries</markersDirectory>
							<artifactItems>
								<artifactItem>
									<groupId>binaries</groupId>
									<artifactId>NUnit</artifactId>
									<version>2.5.9.10348</version>
									<type>zip</type>
									<overWrite>false</overWrite>
									<outputDirectory>binaries</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>selenium-maven-plugin</artifactId>
				<version>2.0</version>				
			</plugin>
		</plugins>
		<sourceDirectory>AllTests/</sourceDirectory>
	</build>
	<dependencies>
		<dependency>
			<groupId>binaries</groupId>
			<artifactId>Nunit</artifactId>
			<version>2.5.9.10348</version>
			<type>zip</type>
		</dependency>
	</dependencies>
		
</project>
